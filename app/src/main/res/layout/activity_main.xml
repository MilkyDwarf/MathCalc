<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="А. Р. Т. Ё. М"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/nameTextView"

        />
   <FrameLayout
       android:layout_width="340dp"
       android:layout_height="wrap_content"
       android:layout_below="@id/nameTextView"
       android:layout_marginTop="27dp"
       android:layout_centerHorizontal="true"
       android:id="@+id/frame1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
            
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/integralButton"
                android:text="Интегралы"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textSize="18sp"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/diffButton"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="Производные"
                android:textColor="@color/black"/>
            
            
        </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center">
           <ru.noties.jlatexmath.JLatexMathView
               android:layout_width="160dp"
               android:layout_height="160dp"
               android:id="@+id/integralsForm"
               app:jlmv_alignVertical="center"
               app:jlmv_alignHorizontal="center"
               android:clickable="false"/>
           <ru.noties.jlatexmath.JLatexMathView
               android:layout_width="160dp"
               android:clickable="false"
               app:jlmv_alignVertical="center"
               app:jlmv_alignHorizontal="center"
               android:layout_height="160dp"
               android:layout_marginLeft="20dp"
               android:id="@+id/diffForm"/>


       </LinearLayout>


   </FrameLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/frame2"

        >

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >


            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/doubleIntegralButton"
                android:text="Двойные интегралы"
                android:textColor="@color/black"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textSize="18sp"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/determinatorButton"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Детерминант"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <ru.noties.jlatexmath.JLatexMathView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/doubleIntegralsForm"
                app:jlmv_alignVertical="center"
                app:jlmv_alignHorizontal="center"
                android:clickable="false"/>
            <ru.noties.jlatexmath.JLatexMathView
                android:layout_width="160dp"
                android:clickable="false"
                app:jlmv_alignVertical="center"
                app:jlmv_alignHorizontal="center"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/determinatorForm"/>

        </LinearLayout>



    </FrameLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:id="@+id/frame3"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frame2"
        android:layout_marginTop="20dp" >
        
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="160dp"
            android:layout_gravity="center">
            <Button
                android:layout_width="340dp"
                android:layout_height="160dp"
                android:text="Системы линейных уравнений"
                android:textColor="@color/black"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:id="@+id/slauButton"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/bigButton"
            >

            <ru.noties.jlatexmath.JLatexMathView
                android:layout_width="340dp"
                android:clickable="false"
                android:layout_gravity="center"
                app:jlmv_alignVertical="start"
                android:layout_height="160dp"
                android:id="@+id/slauForm"/>
        </LinearLayout>





    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame3"
        android:id="@+id/Linear4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автор:"
        android:textSize="30sp"
        android:textColor="@color/black"

        android:id="@+id/Author"
        android:gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/> </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/Linear4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:src="@drawable/githubmark"
            android:layout_gravity="bottom"
            android:id="@+id/gitHub"
        />
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:src="@drawable/vklogo"
            android:layout_gravity="bottom"
            android:id="@+id/VK"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="90dp"
            android:src="@drawable/tg"
            android:layout_gravity="bottom"
            android:id="@+id/TG"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>




</RelativeLayout>